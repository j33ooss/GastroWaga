<Window x:Class="GastroWaga.UI.SessionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sesje inwentaryzacyjne" Height="520" Width="760"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Nowa sesja: " VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="NameBox" Width="220" Margin="0,0,8,0" PlaceholderText="(nazwa – opcjonalnie)"/>
            <TextBox x:Name="WarehouseBox" Width="160" Margin="0,0,8,0" Text="Magazyn"/>
            <TextBox x:Name="UserBox" Width="140" Margin="0,0,8,0" Text="U¿ytkownik"/>
            <Button Content="Start" Width="100" Click="Start_Click"/>
        </StackPanel>

        <TabControl Grid.Row="1" x:Name="Tabs">
            <TabItem Header="Robocze">
                <DataGrid x:Name="OpenGrid" IsReadOnly="True" AutoGenerateColumns="False"
                          SelectionMode="Single" SelectionUnit="FullRow" Margin="0,8,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Magazyn" Binding="{Binding Warehouse}" Width="160"/>
                        <DataGridTextColumn Header="U¿ytkownik" Binding="{Binding User}" Width="160"/>
                        <DataGridTextColumn Header="Start" Binding="{Binding StartedAt}" Width="200"/>
                        <DataGridTextColumn Header="Ostatnia zm." Binding="{Binding LastModifiedAt}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Zamkniête">
                <DataGrid x:Name="ClosedGrid" IsReadOnly="True" AutoGenerateColumns="False"
                          SelectionMode="Single" SelectionUnit="FullRow" Margin="0,8,0,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nazwa" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Magazyn" Binding="{Binding Warehouse}" Width="160"/>
                        <DataGridTextColumn Header="U¿ytkownik" Binding="{Binding User}" Width="160"/>
                        <DataGridTextColumn Header="Start" Binding="{Binding StartedAt}" Width="200"/>
                        <DataGridTextColumn Header="Zamkniêta" Binding="{Binding ClosedAt}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Kontynuuj" Width="120" Margin="0,0,8,0" Click="Continue_Click"/>
            <Button Content="Zamknij" Width="100" Margin="0,0,8,0" Click="Close_Click"/>
            <Button Content="Otwórz ponownie" Width="140" Margin="0,0,8,0" Click="Reopen_Click"/>
            <Button Content="Duplikuj" Width="100" Margin="0,0,8,0" Click="Duplicate_Click"/>
            <Button Content="Zamknij okno" Width="120" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
